#!/bin/sh
# prerm script for graalvm-ce-java11
#
# see: dh_installdeb(1)

set -e

basedir=/usr/lib/jvm/${GRAALVM_PACKAGE_NAME}

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    remove|upgrade|deconfigure)
    for bin in $basedir/bin/*; do
        update-alternatives --remove $(basename $bin) $bin
    done
    
    update-alternatives --remove python $basedir/bin/graal-python
    update-alternatives --remove node $basedir/bin/graal-node
    update-alternatives --remove npm $basedir/bin/graal-npm
    update-alternatives --remove npx $basedir/bin/graal-npx
    update-alternatives --remove R $basedir/bin/graal-R
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
